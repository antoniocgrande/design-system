<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#888888</item>
        <item name="colorPrimaryDark">#444444</item>
        <item name="colorAccent">#aaaaaa</item>
        <item name="android:background">#222222</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">italic|normal</item>

        <!-- Custom widgets by style -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BLUE" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#0000ff</item>
        <item name="colorPrimaryDark">#0000aa</item>
        <item name="colorAccent">#6666ff</item>
        <item name="android:background">#000066</item>
    </style>

    <style name="AppTheme.RED" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#aa0000</item>
        <item name="colorAccent">#ff6666</item>
        <item name="android:background">#660000</item>
    </style>

    <style name="AppTheme.PINK" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#ff66ff</item>
        <item name="colorPrimaryDark">#aa22aa</item>
        <item name="colorAccent">#ff66ff</item>
        <item name="android:background">#440044</item>
    </style>

</resources>
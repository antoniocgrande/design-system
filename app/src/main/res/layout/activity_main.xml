<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16sp"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewSpace0"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdjustableRounded3"
        app:layout_constraintTop_toTopOf="parent"/>

    <br.com.antoniocgrande.lib_button.DsButtonAdjustableRounded
        android:id="@+id/buttonAdjustableRounded1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:enabled="true"
        android:text="DsButtonAdjustableRounded\nradius=0"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSpace0"
        app:radius="0"/>

    <View
        android:id="@+id/viewSpace1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdjustableRounded1"/>

    <br.com.antoniocgrande.lib_button.DsButtonAdjustableRounded
        android:id="@+id/buttonAdjustableRounded2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:enabled="true"
        android:text="DsButtonAdjustableRounded\nradius=20"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSpace1"
        app:radius="20"/>

    <View
        android:id="@+id/viewSpace2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdjustableRounded2"/>

    <br.com.antoniocgrande.lib_button.DsButtonAdjustableRounded
        android:id="@+id/buttonAdjustableRounded3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:enabled="true"
        android:text="DsButtonAdjustableRounded\nradius=40"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSpace2"
        app:radius="40"/>

    <View
        android:id="@+id/viewSpace3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdjustableRounded3"/>

    <br.com.antoniocgrande.lib_button.DsButtonAdjustableRounded
        android:id="@+id/buttonAdjustableRounded4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:enabled="false"
        android:text="DsButtonAdjustableRounded\nradius=40 - disabled"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSpace3"
        app:radius="40"/>

    <View
        android:id="@+id/viewSpace4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdjustableRounded4"/>

    <br.com.antoniocgrande.lib_button.DsButtonRounded
        android:id="@+id/buttonRounded1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:enabled="true"
        android:text="DsButtonRounded\nisRounded=false"
        android:textColor="@color/black"
        app:isRounded="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSpace4"/>

    <View
        android:id="@+id/viewSpace5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonRounded1"/>

    <br.com.antoniocgrande.lib_button.DsButtonRounded
        android:id="@+id/buttonRounded2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:enabled="true"
        android:text="DsButtonRounded\nisRounded=true"
        android:textColor="@color/black"
        app:isRounded="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSpace5"/>

    <View
        android:id="@+id/viewSpace6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonRounded2"/>

    <br.com.antoniocgrande.lib_button.DsButtonRounded
        android:id="@+id/buttonRounded3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:enabled="false"
        android:text="DsButtonRounded\nisRounded=true - disabled"
        android:textColor="@color/black"
        app:isRounded="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSpace6"/>

</androidx.constraintlayout.widget.ConstraintLayout>